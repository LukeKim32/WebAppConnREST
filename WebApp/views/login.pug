doctype html
html(lang="en")
	head
		title Login V11
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="icon" type="image/png" href="images/icons/favicon.ico")
		link(rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css")
		link(rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css")
		link(rel="stylesheet" type="text/css" href="fonts/Linearicons-Free-v1.0.0/icon-font.min.css")
		link(rel="stylesheet" type="text/css" href="vendor/animate/animate.css")
		link(rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css")
		link(rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css")
		link(rel="stylesheet" type="text/css" href="stylesheets/util.css")
		link(rel="stylesheet" type="text/css" href="stylesheets/main.css")
	body
		div.limiter
			div.container-login100
				div.wrap-login100.p-l-50.p-r-50.p-t-77.p-b-30
					form.login100-form.validate-form(action="/login", method="POST")
						span.login100-form-title.p-b-55 Login
						div.wrap-input100.validate-input.m-b-16(data-validate = "Valid email is required: ex@abc.xyz")
							input.input100(type='text', name="id", placeholder="ID")
							span.focus-input100
							span.symbol-input100
								span.lnr.lnr-envelope
						div.wrap-input100.validate-input.m-b-16(data-validate = "Password is required")
							input.input100(type="password", name="pass", placeholder="Password")
							span.focus-input100
							span.symbol-input100
								span.lnr.lnr-envelope
						div.contact100-form-checkbox.m-l-4
							input.input-checkbox100#ckb1(type="checkbox", name="remember-me")
							label.label-checkbox100(for="ckb1") Remember me
						div.container-login100-form-btn.p-t-25
							button.login100-form-btn Login
						div.text-center.w-full.p-t-42.p-b-22
							span.txt1 Or login with
						a(href="#", class="btn-face m-b-10")
							i.fa.fa-facebook-official Facebook
						a(href="#" class="btn-google m-b-10") #[img(src="images/icons/icon-google.png", alt="GOOGLE")] Google
						div.text-center.w-full.p-t-115
							span.txt1 Not a member?
							a.txt1.bo1.hov1(href="#") Sign up now							
	
	// loader
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="vendor/select2/select2.min.js"></script>
	<script src="js/loginmain.js"></script>
